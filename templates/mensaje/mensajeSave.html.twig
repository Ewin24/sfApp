{% extends 'base.html.twig' %}

{% block title %}Nuevo Mensaje{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Nuevo Mensaje</h1>

        {% if puedeEnviar %}
            <form method="post" action="{{ path('enviarMensaje') }}" class="col-md-6 mx-auto">
                <div class="mb-3">
                    <label for="correo" class="form-label">Correo:</label>
                    <input type="email" id="correo" name="correo" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="mensaje" class="form-label">Mensaje:</label>
                    <textarea id="mensaje" name="mensaje" class="form-control" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
            </form>
        {% else %}
            <p>No puedes enviar un nuevo mensaje en este momento, (solo uno por dia).</p>
        {% endif %}
    </div>
{% endblock %}
